<main>
    <div class="picture-header"></div>
    <div class="wrapper">
        <div class="faq">
            <div class="container">
                <svg
                    class="icon__star"
                    aria-hidden="true"
                    focusable="false"
                    xmlns="http://www.w3.org/2000/svg"
                    width="40"
                    height="41"
                    fill="none"
                    viewBox="0 0 40 41"><path
                        fill="#AD28EB"
                        d="M37.5 20.5a2.467 2.467 0 0 1-1.64 2.344l-9.913 3.604-3.603 9.911a2.5 2.5 0 0 1-4.688 0l-3.604-9.922-9.911-3.593a2.5
                            2.5 0 0 1 0-4.688l9.921-3.604 3.594-9.911a2.5 2.5 0 0 1 4.688 0l3.604 9.921 9.911 3.594A2.467 2.467 0 0 1 37.5 20.5Z"/>
                </svg>
                <h1>FAQs</h1>
            </div>
            <div id="faq-elements">
                {% for faq in faqs %}
                    {% Faq question=faq.question, answer=faq.answer %}
                {% endfor %}
            </div>
        </div>
    </div>
</main>
<footer class="attribution">
    <p>
        Challenge by
        <a
            class="attribution__link"
            href="https://www.frontendmentor.io/challenges/product-preview-card-component-GO7UmttRfa"
            target="_blank"
            rel="noopener noreferrer">Frontend
                                  Mentor</a>. Coded by
        <a
            class="attribution__link"
            href="https://www.frontendmentor.io/challenges/faq-accordion-wyfFdeBwBz"
            target="_blank"
            rel="noopener noreferrer">DarekRepos</a>.
    </p>
</footer>
<script>
    const firstDetails = document.querySelector("#faq-elements details"); // Select first details
    const openFirstFAQ = () => firstDetails.open = true;
    document.addEventListener('DOMContentLoaded', () => {
        openFirstFAQ();
    }, false);
</script>